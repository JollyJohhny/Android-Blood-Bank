        android:textSize="16sp" />

    <ListView
        android:id="@+id/ListId"
        android:layout_width="400dp"
        android:layout_height="333dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp" />

</RelativeLayout>